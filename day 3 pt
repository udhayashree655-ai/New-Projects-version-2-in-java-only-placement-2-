import java.util.Arrays;
public class InsertAtStart {
    public static int[] insertAtStart(int[] arr, int a, int b, int c) {
        int[] newArr = new int[arr.length + 3];
        newArr[0] = a;
        newArr[1] = b;
        newArr[2] = c;
        for (int i = 0; i < arr.length; i++) {
            newArr[i + 3] = arr[i];
        }
        return newArr;
    }
    public static void main(String[] args) {
        int[] arr = {4, 5, 6, 7};
        int a = 1, b = 2, c = 3;
        int[] result = insertAtStart(arr, a, b, c);
        System.out.println("New Array: " + Arrays.toString(result));
    }
}

Output:
New Array: [1, 2, 3, 4, 5, 6, 7]
