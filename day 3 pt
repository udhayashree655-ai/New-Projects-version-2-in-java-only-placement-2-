  import java.util.Arrays;

public class PushZerosToStart {

    public static void pushZerosToStart(int[] arr) {
        int n = arr.length;
        int[] result = new int[n];
        int index = n - 1;  

       
        for (int i = n - 1; i >= 0; i--) {
            if (arr[i] != 0) {
                result[index] = arr[i];
                index--;
            }
        }

        
        System.out.println("Result Array: " + Arrays.toString(result));
    }

    public static void main(String[] args) {
        int[] arr = {1, 0, 2, 0, 3, 4, 0};

        pushZerosToStart(arr);
    }
}
output:

Result Array: [0, 0, 0, 1, 2, 3, 4]
5)
  
  
