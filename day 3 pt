  import java.util.Arrays;

public class DeleteSecondIndex {

    public static int[] deleteSecondIndex(int[] arr) {
        if (arr.length <= 1) {
            return arr; 
        }

        int[] newArr = new int[arr.length - 1];

        for (int i = 0, j = 0; i < arr.length; i++) {
            if (i == 1) {  
                continue;
            }
            newArr[j++] = arr[i];
        }

        return newArr;
    }

    public static void main(String[] args) {
        int[] arr = {10, 20, 30, 40, 50};

        int[] result = deleteSecondIndex(arr);

        System.out.println("Resultant Array: " + Arrays.toString(result));
    }
}
Output:

Resultant Array: [10, 30, 40, 50]
