  import java.util.Arrays;

public class InsertInMiddle {

    public static int[] insertInMiddle(int[] arr, int x) {
        int n = arr.length;
        int mid = n / 2;  
        int[] newArr = new int[n + 1];

        
        for (int i = 0; i < mid; i++) {
            newArr[i] = arr[i];
        }

       
        newArr[mid] = x;

        
        for (int i = mid; i < n; i++) {
            newArr[i + 1] = arr[i];
        }

        return newArr;
    }

    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4};
        int x = 99;

        int[] result = insertInMiddle(arr, x);

        System.out.println("New Array: " + Arrays.toString(result));
    }
}
Output:

New Array: [1, 2, 99, 3, 4]
